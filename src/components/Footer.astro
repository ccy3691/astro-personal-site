---
import '../styles/shared.css';
---

<footer class="footer">
	<div class="footer-content">
		<p>&copy; 2025 Chris Young. All rights reserved.</p>
		<div class="social-links">
			<a href="https://github.com/ccy3691" target="_blank" class="social-link">GitHub</a>
			<a href="https://linkedin.com/in/chrisyoung96" target="_blank" class="social-link">LinkedIn</a>
		</div>
	</div>
</footer>

<style>
    .footer {
        background: #f1f5f9;
        color: #1e293b;
        padding: 2rem;
        text-align: center;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    html.dark .footer {
        background: #1e293b;
        color: #f1f5f9;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
    }

    .social-links {
        margin-top: 1.5rem;
        display: flex;
        justify-content: center;
        gap: 2rem;
    }

    .social-link {
        color: inherit;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .social-link:hover {
        color: var(--primary-color);
    }

    @media (max-width: 768px) {
        .footer {
            padding: 2rem 1.5rem;
            font-size: 0.9rem;
        }

        .footer-content {
            flex-direction: column;
            gap: 1.5rem;
        }

        .social-links {
            gap: 1rem;
        }

        .social-link {
            width: 40px;
            height: 40px;
        }
    }

    @media (max-width: 480px) {
        .footer {
            padding: 1.5rem 1rem;
            font-size: 0.85rem;
        }
    }
</style>
