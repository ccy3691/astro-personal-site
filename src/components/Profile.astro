---
import '../styles/shared.css';
import resume from '../assets/resume_2025.pdf';
import headshot from '../assets/headshot.jfif';
import { Image } from 'astro:assets';
---

<section id="home" class="profile">
	<div class="profile-content">
		<div class="headshot-container">
			<div class="headshot-placeholder">
				<Image loading="lazy" height={250} width={250} src={headshot} alt="Headshot" />
			</div>
		</div>
		<h1 class="profile-title">Chris Young</h1>
		<p class="profile-subtitle">Lead Software Engineer</p>
		<a href={resume} download class="resume-link">Download Resume</a>
		<p class="profile-description">
		Engineering leader at <a href="https://clarivate.com/" target="_blank" rel="noopener noreferrer">Clarivate</a> with expertise in full-stack development and building scalable systems.
		</p>
	</div>
</section>

<style>
	.profile {
		min-height: 90vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, #f8fafc 0%, #e0f2fe 100%);
		padding-top: 70px;
		padding-bottom: 2rem;
		position: relative;
		overflow: hidden;
		transition: background 0.3s ease;
	}

	html.dark .profile {
		background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
	}

	.profile::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 80% 80%, rgba(6, 182, 212, 0.1) 0%, transparent 50%);
		pointer-events: none;
	}

	.profile-content {
		text-align: center;
		z-index: 1;
		animation: fadeInUp 0.8s ease 0.2s both;
	}

	.headshot-container {
		margin-bottom: 2rem;
		animation: fadeInDown 0.8s ease 0.3s both;
	}

	.headshot-placeholder {
		width: 250px;
		height: 250px;
		margin: 0 auto;
		border-radius: 50%;
		overflow: hidden;
		box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
		border: 4px solid var(--bg-white);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.headshot-placeholder:hover {
		transform: scale(1.05);
		box-shadow: 0 25px 60px rgba(59, 130, 246, 0.25);
	}

	.headshot-placeholder img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center top;
	}

	.profile-title {
		font-size: 3.5rem;
		font-weight: 800;
		background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		margin: 1rem 0;
		animation: fadeInUp 0.8s ease 0.4s both;
	}

	.profile-subtitle {
		font-size: 1.5rem;
		color: var(--light-text);
		margin-bottom: 1rem;
		animation: fadeInUp 0.8s ease 0.5s both;
	}

	.resume-link {
		display: inline-block;
		padding: 0.7rem 1.5rem;
		margin-bottom: 2rem;
		background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
		color: white;
		text-decoration: none;
		border-radius: 8px;
		font-weight: 600;
		font-size: 1rem;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
		animation: fadeInUp 0.8s ease 0.55s both;
	}

	.resume-link:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(59, 130, 246, 0.5);
	}

	.profile-description {
		font-size: 1.1rem;
		color: var(--light-text);
		max-width: 600px;
		margin: 0 auto 2rem;
		animation: fadeInUp 0.8s ease 0.6s both;
	}

	.profile-description a {
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.3s ease;
	}

	.profile-description a:hover {
		color: var(--accent-color);
	}

	.scroll-indicator {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		animation: fadeInUp 0.8s ease 0.7s both;
	}

	.scroll-indicator span {
		width: 24px;
		height: 40px;
		border: 2px solid var(--primary-color);
		border-radius: 12px;
		position: relative;
	}

	.scroll-indicator span::after {
		content: '';
		position: absolute;
		top: 8px;
		left: 50%;
		width: 4px;
		height: 8px;
		background: var(--primary-color);
		border-radius: 2px;
		transform: translateX(-50%);
		animation: scrollDown 2s ease-in-out infinite;
	}

	@keyframes scrollDown {
		0%, 100% {
			transform: translateX(-50%) translateY(0);
		}
		50% {
			transform: translateX(-50%) translateY(8px);
		}
	}
	@media (max-width: 768px) {
		.profile {
			min-height: auto;
			padding: 70px 1.5rem 2rem;
		}

		.profile-title {
			font-size: 2.2rem;
			line-height: 1.2;
			margin-bottom: 1rem;
		}

		.profile-subtitle {
			font-size: 1rem;
			margin-bottom: 2rem;
		}

		.resume-link {
			padding: 0.6rem 1.3rem;
			font-size: 0.95rem;
		}

		.headshot-placeholder {
			width: 150px;
			height: 150px;
			margin-bottom: 2rem;
		}

		.scroll-indicator {
			margin-top: 2rem;
		}
	}


	/* Extra Small Devices (phones under 480px) */
	@media (max-width: 480px) {
		.profile {
			min-height: auto;
			padding: 70px 1rem 1.5rem;
		}

		.profile-title {
			font-size: 1.8rem;
			line-height: 1.2;
			margin-bottom: 0.8rem;
		}

		.profile-subtitle {
			font-size: 0.95rem;
			margin-bottom: 1.5rem;
		}

		.resume-link {
			padding: 0.5rem 1rem;
			font-size: 0.9rem;
		}

		.headshot-placeholder {
			width: 120px;
			height: 120px;
			margin-bottom: 1.5rem;
		}
	}
</style>
