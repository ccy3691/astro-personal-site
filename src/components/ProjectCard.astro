---
import '../styles/shared.css';

interface Props {
	image?: {
		src: string;
		alt: string;
	};
	title: string;
	description: string;
	tags: string[];
}

const { image, title, description, tags } = Astro.props;
---

<div class="project-card">
	{image && (
		<img 
			src={image.src} 
			alt={image.alt} 
			class="project-image clickable-image" 
			data-image={image.src} 
			data-alt={image.alt} 
		/>
	)}
	<h3>{title}</h3>
	<p>{description}</p>
	<div class="project-tags">
		{tags.map(tag => (
			<span class="tag">{tag}</span>
		))}
	</div>
</div>
